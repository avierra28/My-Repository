<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".removeActivity">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="677dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/removeLabel"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:includeFontPadding="false"
            android:paddingTop="25px"
            android:text="@string/remove_an_entry_page"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/select_an_entry_from_the_spinner_below_and_click_the_delete_button_at_the_bottom_to_finalize_the_deletion"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/removeSpinner"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <TextView
            android:id="@+id/entryField"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:text="@string/remove_entry" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>